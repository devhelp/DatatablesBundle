<script type="text/javascript" src="http://taskmanager.local/js/jquery.dataTables.columnFilter.js"></script>

<table cellpadding="0" cellspacing="0" border="0" class="display table table-striped table-bordered" id="{{ id }}">
    <thead>
    <tr>
        {% for column in columns %}
            <th>{{ column.mData }}</th>
        {% endfor %}
    </tr>
    </thead>
    <tbody>
    </tbody>
    <tfoot>
    <tr>
        {% for column in columns %}
            <th>{{ column.mData }}</th>
        {% endfor %}
    </tr>
    </tfoot>
</table>
<script>
    $(document).ready(function() {
        var datatables = $('#{{ id }}').dataTable({
            bProcessing     : true,
            sAjaxSource     : "http://devhelp.local/app_dev.php/grid",
            bServerSide     : true,
            aoColumns: [
                {% for column in columns %}
                    { mData: "{{ column.mData }}", bSearchable: {{ column.bSearchable }}   , sName : "{{ column.sName }}" },
                {% endfor %}
            ]
        });

        datatables.columnFilter();

    });

</script>
