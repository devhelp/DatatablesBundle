{% javascripts '@DevhelpDatatablesBundle/Resources/public/js/*' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
<table cellpadding="0" cellspacing="0" border="0" class="display table table-striped table-bordered" id="{{ id }}">
    <thead>
    <tr>
        {% for column in config.columns %}
            <th>{{ column.mData }}</th>
        {% endfor %}
    </tr>
    </thead>
    <tbody>
    </tbody>
    <tfoot>
    <tr>
        {% for column in config.columns %}
            <th>{{ column.mData }}</th>
        {% endfor %}
    </tr>
    </tfoot>
</table>
<script>
    $(document).ready(function() {
        var datatables = $('#{{ id }}').dataTable({
            bProcessing     : true,
            sAjaxSource     : "{{ path(config.routing) }}",
            bServerSide     : true,
            aoColumns: [
                {% for column in config.columns %}
                    { mData: "{{ column.mData }}", bSearchable: {{ column.bSearchable }}   , sName : "{{ column.sName }}" },
                {% endfor %}
            ]
        });
        {% if(config.use_filters) %}
        datatables.columnFilter();
        {% endif %}
    });

</script>
